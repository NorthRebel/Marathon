<UserControl x:Class="Marathon.Desktop.Controls.MarathonOptions.MarathonOptionsMultiple"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Marathon.Desktop.Controls.MarathonOptions"
             xmlns:custom="clr-namespace:Marathon.Desktop.Controls.Custom"
             mc:Ignorable="d">

    <custom:ListBox ItemsSource="{Binding ItemsSource}"
                    SelectionMode="Multiple"
                    Background="Transparent"
                    SelectedItemsList="{Binding SelectedItems}"/>

</UserControl>
