<UserControl x:Class="Marathon.Desktop.Controls.MarathonOptions.MarathonOptionsListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Marathon.Desktop.Controls.MarathonOptions"
             xmlns:viewModels="clr-namespace:Marathon.Core.ViewModel.MarathonOptions.Design;assembly=Marathon.Core"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">

    <UserControl.Resources>
        <DataTemplate x:Key="ItemContentTempalte">
            <local:MarathonOptionsItemControl/>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                      d:DataContext="{x:Static viewModels:MarathonOptionsDesignModel.Instance}">
        <ItemsControl ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DynamicResource ResourceKey="ItemContentTempalte"/>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
