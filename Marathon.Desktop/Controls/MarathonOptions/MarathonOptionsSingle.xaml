<UserControl x:Class="Marathon.Desktop.Controls.MarathonOptions.MarathonOptionsSingle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Marathon.Desktop.Controls.MarathonOptions"
             mc:Ignorable="d">

    <ListBox ItemsSource="{Binding ItemsSource}"
             SelectedItem="{Binding SelectedItem}">

        <ListBox.ItemTemplate>
            <DataTemplate>
                <RadioButton GroupName="RadioList"
                             Content="{Binding}"/>
            </DataTemplate>
        </ListBox.ItemTemplate>

    </ListBox>

</UserControl>
