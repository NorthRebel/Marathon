<local:BasePage x:TypeArguments="viewModels:SignUpRunnerViewModel" 
             x:Class="Marathon.Desktop.Pages.SignUpRunnerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Marathon.Desktop.Pages"
             xmlns:controls="clr-namespace:Marathon.Desktop.Controls"
             xmlns:input="clr-namespace:Marathon.Desktop.Controls.Input"
             xmlns:converters="clr-namespace:Marathon.Desktop.ValueConverters"
             xmlns:viewModels="clr-namespace:Marathon.Core.ViewModel;assembly=Marathon.Core"   
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <!--Caption and description-->
            <RowDefinition Height="Auto"/>
            <!--Sign Up form-->
            <RowDefinition Height="*"/>
            <!--Confirmation buttons-->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Caption and description-->
        <controls:PageCaptionControl 
            Grid.Row="0"
            DataContext="{Binding PageCaption}"/>

        <!--Sign Up form-->
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
                        Name="LeftPanel">
                <!--Email-->
                <input:LeftEntryControl DataContext="{Binding Email}">
                    <TextBox Tag="Email"/>
                </input:LeftEntryControl>

                <!--Password-->
                <input:LeftEntryControl DataContext="{Binding Password}">
                    <PasswordBox Tag="Пароль"/>
                </input:LeftEntryControl>

                <!--Confirm password-->
                <input:LeftEntryControl DataContext="{Binding ConfirmPassword}">
                    <TextBox Tag="Повторите пароль"/>
                </input:LeftEntryControl>

                <!--First name-->
                <input:LeftEntryControl DataContext="{Binding FirstName}">
                    <TextBox Tag="Имя"/>
                </input:LeftEntryControl>

                <!--Last name-->
                <input:LeftEntryControl DataContext="{Binding LastName}">
                    <TextBox Tag="Фамилия"/>
                </input:LeftEntryControl>

                <!--Gender-->
                <input:LeftEntryControl DataContext="{Binding Gender}">
                    <ComboBox Tag="Пол"/>
                </input:LeftEntryControl>
            </StackPanel>

            <StackPanel Grid.Column="1">
                
                <!--Selected Photo-->
                <Border Height="{Binding ActualHeight, ElementName=LeftPanel, 
                            Converter={converters:DivValueConverter}, ConverterParameter=3}"
                        Width="{Binding ActualWidth, ElementName=LeftPanel,
                            Converter={converters:DivValueConverter}, ConverterParameter=2}"
                        HorizontalAlignment="Right" 
                        CornerRadius="5">


                    <Image/>
                </Border>

                <!--Select photo-->
                <Grid>

                    <Grid.ColumnDefinitions>
                        <!--Selected file path-->
                        <ColumnDefinition Width="*"/>
                        <!--Select file button-->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!--Selected file path-->
                    <input:TopEntryControl
                        Grid.Column="0"
                        DataContext="{Binding Photo}">
                        <TextBox IsReadOnly="True"
                                 Foreground="{StaticResource GrayBrush}"
                                 FontStyle="Italic"/>
                    </input:TopEntryControl>

                    <Button Grid.Column="1"
                            Content="Открыть"                            
                            Margin="10 30 10 15"/>

                </Grid>

                <!--Date of birth-->
                <input:LeftEntryControl DataContext="{Binding BirthDay}">
                    <DatePicker/>
                </input:LeftEntryControl>

                <!--Country-->
                <input:LeftEntryControl DataContext="{Binding Country}">
                    <ComboBox/>
                </input:LeftEntryControl>
            </StackPanel>

        </Grid>

        <!--Confirmation buttons-->
        <Grid Grid.Row="2"
              Margin="0 10 0 0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Width="80"
                    HorizontalAlignment="Right"
                    Content="Отмена"
                    Command="{Binding CancelCommand}"/>

            <Button Grid.Column="1"
                    Width="80"
                    HorizontalAlignment="Left"
                    Content="Регистрация"
                    Command="{Binding SignUpCommand}"
                    CommandParameter="{Binding ElementName=Page}"/>

        </Grid>
    </Grid>
</local:BasePage>
