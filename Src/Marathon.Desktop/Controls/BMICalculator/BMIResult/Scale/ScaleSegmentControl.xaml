<UserControl x:Class="Marathon.Desktop.Controls.BMICalculator.BMIResult.Scale.ScaleSegmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Marathon.Desktop.Controls.BMICalculator.BMIResult.Scale"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">

    <StackPanel>

        <!--Segment-->
        <Rectangle x:Name="SegmentRect"
                   MinHeight="15"/>

        <!--Description-->
        <TextBlock MinHeight="25"
                   HorizontalAlignment="Center"
                   FontSize="{StaticResource FontSizeSmall}"
                   Foreground="{StaticResource GrayBrush}"
                   x:Name="DescriptionText"/>


    </StackPanel>

</UserControl>
